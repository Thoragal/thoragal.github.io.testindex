<core:FragmentDefinition	xmlns="sap.m" 
							xmlns:mvc="sap.ui.core.mvc"
							xmlns:core="sap.ui.core"
							xmlns:l="sap.ui.layout"
							xmlns:f="sap.f">

	<HBox alignItems="Center" justifyContent="Center" >
		<Image	src="images/Home/StartPicture.jpg" 
				width="100%" 
				height="auto"/>
	</HBox>

<!-- Tile Wiki -->
		<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
			<GenericTile
				backgroundImage="images/Home/Wiki.jpg"
				frameType="TwoByOne" 
				press="onNavToWiki">
				<TileContent>
					<NewsContent
						contentText="{i18n>StartTileContentWiki}"
						subheader="{i18n>StartTileSubheaderWiki}" />
				</TileContent>
			</GenericTile>
		</SlideTile>
		
<!-- Tile Objektliste -->
		<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
			<GenericTile
				backgroundImage="images/Home/Objektliste.jpg"
				frameType="TwoByOne" 
				press="onNavToList">
				<TileContent>
					<NewsContent
						contentText="{i18n>StartTileContentObjectlist}"
						subheader="{i18n>StartTileSubheaderObjectlist}" />
				</TileContent>
			</GenericTile>
		</SlideTile>

<!-- Tile AboutMe -->
		<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
			<GenericTile
				backgroundImage="images/Home/AboutMe.jpg"
				frameType="TwoByOne" 
				press="onNavToAboutMe">
				<TileContent>
					<NewsContent
						subheader="{i18n>StartTileSubheaderAboutMe}" />
				</TileContent>
			</GenericTile>
		</SlideTile>

</core:FragmentDefinition>